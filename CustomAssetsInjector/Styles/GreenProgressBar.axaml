<Style xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <ProgressBar Value="20" IsIndeterminate="True" CornerRadius="5" ShowProgressText="True"/>
    </Border>
  </Design.PreviewWith>
  
  <Style Selector="ProgressBar">
    <Setter Property="Foreground" Value="SeaGreen"></Setter>
    <Setter Property="Background" Value="#40c8d3c5"></Setter>
  </Style>
  
  <Style Selector="ProgressBar /template/ Border#PART_Indicator">
    <Setter Property="CornerRadius" Value="5"></Setter>
  </Style>
  
  <Style Selector="ProgressBar /template/ Border#PART_IndeterminateIndicator">
    <Setter Property="CornerRadius" Value="5"></Setter>
  </Style>
  
</Style>
